[user]
	name = Dan Schiff
	email = dschiff@tylercapital.co.uk
[core]
	editor = vim
[alias]
   lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
   st = status -s
   co = checkout
   br = branch -vv
   dt = "!f() { git difftool $1^ $1; }; f"
[merge]
   tool = meld
[difftool]
   prompt = false
[mergetool]
   prompt = false
[branch]
   autosetuprebase = always
[push]
	default = simple
[pull]
	rebase = true
